@model IEnumerable<DDDApplication.MVC.ViewModels.CustomerViewModel>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p>
    @Html.ActionLink("Special Clients", "Special")
</p>

<div class="col-md-12" style="margin-top:20px">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="border:1px solid #ddd; padding-top:10px;padding-bottom:10px; border-radius:4px">
        <div class="col-md-12">
            <div class="col-md-2" style="text-align:center; padding-top:7px;">
                <label>Nome:</label>
            </div>
            <div class="col-md-8">
                <input type="text" id="customerName" name="FA" class="form-control" />
            </div>
            <input type="button" id="btnSearhcustomerName" value="Buscar" class="btn btn-primary" />
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

<div style="position:relative; margin-top:100px">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>